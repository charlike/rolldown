{
  "name": "rolldown",
  "version": "0.1.3",
  "description": "Thin layer on top of [rollup][] api to allow loading configs from package.json file",
  "repository": "rolldown/rolldown",
  "author": "Charlike Mike Reagent <@tunnckoCore> (http://i.am.charlike.online)",
  "precommit.silent": true,
  "jsnext:main": "lib/index.es6.js",
  "module": "lib/index.es6.js",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "standard src/**/* --verbose --fix",
    "prebuild": "npm run lint",
    "build": "rollup -c",
    "prebuild:test": "npm run lint",
    "build:test": "rollup -c rollup.config.test.js",
    "pretest": "npm run build:test",
    "test": "nyc node tmp/test",
    "posttest": "nyc check-coverage --lines 0 --branches 0 --statements 0 --functions 0",
    "precommit": "npm run build",
    "commit": "git add --all",
    "postcommit": "git-cz",
    "prerelease": "npm test",
    "release": "standard-version --sign --no-verify",
    "ci": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "extend-shallow": "^2.0.1",
    "rollup": "^0.39.2"
  },
  "devDependencies": {
    "commitizen": "^2.9.2",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "^1.2.0",
    "husky": "^0.12.0",
    "mukla": "^0.4.8",
    "nyc": "^10.0.0",
    "rollup-plugin-buble": "^0.15.0",
    "standard": "^8.6.0",
    "standard-version": "^4.0.0"
  },
  "files": [
    "lib/"
  ],
  "keywords": [],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "always-done",
        "minibase",
        "try-catch-core"
      ],
      "highlight": "always-done"
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "always-done",
      "async-done",
      "base",
      "charlike",
      "commitizen",
      "dezalgo",
      "once",
      "rollup",
      "standard-version",
      "verb",
      "verb-generate-readme"
    ]
  },
  "engines": {
    "node": ">=4",
    "npm": ">=2"
  }
}
